#!/usr/bin/env bash
set -euo pipefail

source "$(dirname "${BASH_SOURCE[0]}")/../include/common.bash"

if [[ $# < 2 ]]; then
    echo "Usage: na4ma4-install-pkg name version"
    echo
    echo "  Installs a specific version of a na4ma4 Makefiles extension package."
    exit 1
fi

name="${1}"
version="${2}"

target="${NA4MA4_MF_ROOT}/pkg/${name}/v${version}"

if [ ! -d "${target}" ]; then
    log "[na4ma4] copying ${name}@v${version} package archive from main cache"
    mkdir -p "${target}"
    cp -r ".makefiles/ext/na4ma4/lib/cache/${name}/v${version}"/* "${target}/"
fi

if [ -d "${target}/install.d" ]; then
    log "[na4ma4] executing ${name}@v${version} package install hooks"
    for file in "${target}/install.d/"*; do
        "${file}"
    done
fi
